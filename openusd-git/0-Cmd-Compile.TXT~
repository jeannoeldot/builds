----------------------------------------------------------------------
$ mv -v $HOME/00-repolocal/openusd-git-*-x86_64.pkg.tar.* \
$HOME/00-repolocal/pkg-OLD/

$ mv -v openusd-git-*-x86_64.pkg.tar.* $HOME/00-repolocal/


