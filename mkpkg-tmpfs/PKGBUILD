pkgname=mkpkg-tmpfs
pkgver=1.2.2
pkgrel=1
pkgdesc='Creation paquets en RAM.'
arch=('any')
url='http://www.club-internet.fr/jeannoeldot/'
license=('GPL-2.0-only')
depends=('devtools')
options=('!debug')
source=("${pkgname}-${pkgver}.tar.gz")
sha256sums=('0963804880cfba985e85b25e001f96efa688b9f7cbb93adeb5e6882f9ca626b0')

build() {
    cd "${pkgname}-${pkgver}"
    make
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}

