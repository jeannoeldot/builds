# Maintainer: Moi <name AT fai DOT fr>

pkgname=openpgl-jnd
pkgver=0.7.1.20250731
pkgrel=2
_ver_release="0.7.1"
_name_release="openpgl-${_ver_release}"
pkgdesc="Intel(R) Open Path Guiding Library"
url="http://www.openpgl.org/"
arch=('x86_64')
license=('Apache-2.0')
depends=('onetbb'
)
makedepends=('cmake'
)
conflicts=('openpgl' 'openpgl-git')
provides=('openpgl')
options=('!debug')
source=("openpgl-${_ver_release}.tar.gz"
)
sha256sums=('d62d24241232a526491328f341df9add274fc84ae9818470d3edb5ae6141ac63'
)

build() {
  cd "${_name_release}"

  cmake \
    -Bbuild \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_SKIP_RPATH=ON
  make -C build
}

package() {
  cd "${_name_release}"
  
  DESTDIR="${pkgdir}" make -C build install
}
