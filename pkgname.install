post_install() {
  xdg-desktop-menu forceupdate 2> /dev/null
  xdg-icon-resource forceupdate --theme hicolor 2> /dev/null
}

post_upgrade() {
  xdg-desktop-menu forceupdate 2> /dev/null
  xdg-icon-resource forceupdate --theme hicolor 2> /dev/null
}

post_remove() {
  xdg-desktop-menu forceupdate 2> /dev/null
  xdg-icon-resource forceupdate --theme hicolor 2> /dev/null
}
