# Maintainer: Doug Newgard <scimmia at archlinux dot info>
# Contributor: reflexing <reflexing@reflexing.ru>

pkgname=ttf-win11-fonts
pkgver=11.0.24H2
pkgrel=1
pkgdesc='Microsoft Windows 11 TrueType fonts'
arch=('any')
url='http://www.microsoft.com/typography/fonts/product.aspx?PID=164'
license=('custom')
provides=('ttf-font' 'ttf-tahoma' 'ttf-ms-fonts')
conflicts=( 'ttf-win10-fonts' 'ttf-vista-fonts' 'ttf-win7-fonts' 'ttf-tahoma' 'ttf-ms-fonts')
options=('!debug')

source=('win11-fonts.tar.gz'
)

sha256sums=('0bdcc6297ce7b957ec4b4c95cd60a95b865e7ddf9444a026045cf4e7490ae38c'
)

package() {
  cd "${srcdir}"

  # Prepare destination directory
  install -d -m 755 "${pkgdir}/usr/share/fonts/TTF"

  # Install fonts
  install -m 644 fonts/*.ttf "${pkgdir}/usr/share/fonts/TTF"
  install -m 644 fonts/*.ttc "${pkgdir}/usr/share/fonts/TTF"
  # Install license
  install -D -m 644 fonts/license.rtf "${pkgdir}/usr/share/licenses/${pkgname}/license.rtf"
}
