# Maintainer: Moi <name AT fai DOT fr>

pkgname=embree-git
pkgver=3.6.0.20190820
pkgrel=1
_ver_release="3.6.0"
_name_release="embree-${_ver_release}"
pkgdesc="High Performance Ray Tracing Kernels"
url="https://github.com/embree"
arch=('x86_64')
license=('Apache')
depends=('intel-tbb' 'glfw-x11'
)
makedepends=('cmake'
)
conflicts=('embree')
provides=('embree')
options=(staticlibs)
source=("embree-${_ver_release}.tar.gz"
        "enable-optimizations-Ofast-floop.patch"
)
sha256sums=('3c179aa09efe1f591f277cd8835e37726998f657730ca456d08f584fc8780559'
            'd47399edb747f70a89dcaf06d94aa1642ca8ba520b908d80a0e3dabb0b16eaea'
)

prepare() {
  cd "${_name_release}"
  # Enable optimizations Ofast et floop
  patch -Np1 -i "${srcdir}/enable-optimizations-Ofast-floop.patch"
}

build() {
  cd "${_name_release}"

  [[ -d build ]] && rm -rf build
  mkdir build && cd build
  cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_SKIP_RPATH=ON \
    -DEMBREE_ISPC_SUPPORT=OFF \
    -DEMBREE_STATIC_LIB=ON \
    -DEMBREE_TUTORIALS=OFF \
    -DEMBREE_RAY_MASK=ON \
    -DEMBREE_TASKING_SYSTEM=INTERNAL \
    -DEMBREE_MAX_ISA=AVX2 \
    ..
  make VERBOSE=1
}

package() {
  cd "${_name_release}/build"
  
  make DESTDIR="${pkgdir}" install
}
