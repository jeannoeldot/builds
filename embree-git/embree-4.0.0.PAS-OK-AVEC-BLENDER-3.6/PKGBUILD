# Maintainer: Moi <name AT fai DOT fr>

pkgname=embree-git
pkgver=4.0.0.20230208
pkgrel=1
_ver_release="4.0.0"
_name_release="embree-${_ver_release}"
pkgdesc="High Performance Ray Tracing Kernels"
url="https://github.com/embree"
arch=('x86_64')
license=('Apache')
depends=('tbb'
)
makedepends=('cmake'
)
conflicts=('embree')
provides=('embree')
source=("embree-${_ver_release}.tar.gz"
)
sha256sums=('bb967241f9516712a9f8e399ed7f756d7baeec3c85c223c0005ede8b95c9fa61'
)

build() {
  cd "${_name_release}"

  cmake \
    -Bbuild \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_SKIP_RPATH=ON \
    -DEMBREE_TUTORIALS=OFF \
    -DEMBREE_RAY_MASK=ON \
    -DEMBREE_MAX_ISA="AVX2"
  make -C build
}

package() {
  cd "${_name_release}"
  
  DESTDIR="${pkgdir}" make -C build install

  # embree-vars.sh embree-vars.csh
  mkdir -p "${pkgdir}"/usr/share/embree4
  mv "${pkgdir}"/usr/./embree-vars.sh "${pkgdir}"/usr/share/embree4
  mv "${pkgdir}"/usr/./embree-vars.csh "${pkgdir}"/usr/share/embree4
}
